<div class="card">
  <div class="card-header text-muted">
    <small>{{this.dateText}}</small>
  </div>
  <img class="card-img-top" src={{@article.coverImage}} alt="" role="presentation">
  <div class="card-body">
    <h4 class="card-title">{{@article.title}}</h4>
    <p class="card-text">
      {{@article.description}}
    </p>
    <LinkToAndScrollNav @route="news.article" @models={{array @article.year @article.month @article.day @article.id}} class="card-link">
      Read more
    </LinkToAndScrollNav>
  </div>
</div>