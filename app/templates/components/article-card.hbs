<div class="card">
  <div class="card-header text-muted">
    <small>{{dateText}}</small>
  </div>
  <img class="card-img-top" src={{article.coverImage}}>
  <div class="card-body">
    <h4 class="card-title">{{article.title}}</h4>
    <p class="card-text">
      {{article.description}}
    </p>
    {{#link-to-and-scroll-nav "news.article" article.year article.month article.day article.id class="card-link"}}
      Read more
    {{/link-to-and-scroll-nav}}
  </div>
</div>