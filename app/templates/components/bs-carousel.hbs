<div id="{{carouselId}}" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each imageSources as |imageSrc index|}}
      {{#if selected}}
        {{#if (eq selected imageSrc)}}
          <li class="active" data-target="#{{carouselId}}" data-slide-to="{{index}}"></li>
        {{else}}
          <li data-target="#{{carouselId}}" data-slide-to="{{index}}"></li>
        {{/if}}
      {{else}}
        {{#if index}}
          <li data-target="#{{carouselId}}" data-slide-to="{{index}}"></li>
        {{else}}
          <li class="active" data-target="#{{carouselId}}" data-slide-to="{{index}}"></li>
        {{/if}}
      {{/if}}
    {{/each}}
  </ol>
  <div class="carousel-inner">
    {{#each imageSources as |imageSrc index|}}
      {{#if selected}}
        {{#if (eq selected imageSrc)}}
          <div class="carousel-item active">
            <img class="d-block w-100" src="{{imageSrc}}" alt="Slide {{index}}">
          </div>
        {{else}}
          <div class="carousel-item">
            <img class="d-block w-100" src="{{imageSrc}}" alt="Slide {{index}}">
          </div>
        {{/if}}
      {{else}}
        {{#if index}}
          <div class="carousel-item">
            <img class="d-block w-100" src="{{imageSrc}}" alt="Slide {{index}}">
          </div>
        {{else}}
          <div class="carousel-item active">
            <img class="d-block w-100" src="{{imageSrc}}" alt="Slide {{index}}">
          </div>
        {{/if}}
      {{/if}}
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#{{carouselId}}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#{{carouselId}}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>