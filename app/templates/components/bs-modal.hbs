<div class="modal fade"
     id="bs-modal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true"
  {{did-insert this.onDidInsert}}
  {{will-destroy this.onWillDestroy}}
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      {{yield}}
    </div>
  </div>
</div>